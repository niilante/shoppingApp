@{
    ViewBag.Title = "Home Page";
}
@model List<Blog.Models.BlogPost>

<!-- Top Navigation -->

<section id="hero" class="light-typo">
    <div id="cover-image" class="image-bg animated fadeIn"></div>
    <div class="container welcome-content">
        <div class="middle-text">
            <h1>Key Lime Pie Blog</h1>
            <h2><b>Key Lime Pie Blog</b> is a blog theme built with Bootstrap</h2>
        </div>
    </div>
</section>

@foreach (var blogPost in Model)
{
    <div class="col-md-3">
        <div id="start" class="container content">
            <div class="row">
                <div class="col-md-10 col-md-offset-1">
                    <article class="clearfix">
                        <div class="post-date">
                            @blogPost.Created | @blogPost.CreatedBy.FirstName @blogPost.CreatedBy.LastName
                            <span>@Html.ActionLink("Details", "BlogPosts", "Details")</span> | Comments
                        </div>
                        <h2>@blogPost.Title</h2>
                        <p>
                            @blogPost.Body <a class="" href="@Html.ActionLink("Details", "BlogPosts")">read more</a>
                        </p>
                    </article>
                </div>
            </div>
        </div>
    </div>
}


    



