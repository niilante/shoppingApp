@model Blog.Models.CodeFirst.Comment

@{
    ViewBag.Title = "Delete";
}

<div class="container">
  <h3>Are you sure you want to delete this comment?</h3>
  <p>
    <span class="comment-name">Written by @Model.Author.DisplayName</span>
    <span class="comment-date">Posted on @Model.CommentCreated.ToString("dddd, MMMM d, yyyy 'at' h:mm tt")</span>
  </p>
  <hr class="blog-ridges" />
  <p>@Model.Body</p>
  <div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
          <input type="submit" value="Delete" class="btn green-btn" />
          <button class="btn btn-primary">
            @Html.ActionLink("Cancel", "Details", "Posts", new { slug = @Model.Post.Slug }, null)
          </button>
        </div>
    }
  </div>
</div>

